import json
from pathlib import Path

class LibraryInventory:
    # Previous methods here...

    def save_to_file(self, filename):
        """Saves the book inventory to a JSON file."""
        try:
            with open(filename, 'w') as file:
                books_data = [book.__dict__ for book in self.books]  # Convert books to dictionaries
                json.dump(books_data, file, indent=4)
            print("Books saved to file successfully.")
        except Exception as e:
            print(f"Error saving to file: {e}")

    def load_from_file(self, filename):
        """Loads the book inventory from a JSON file."""
        if Path(filename).exists():
            try:
                with open(filename, 'r') as file:
                    books_data = json.load(file)
                    self.books = [Book(book['title'], book['author'], book['isbn']) for book in books_data]
                print("Books loaded from file successfully.")
            except Exception as e:
                print(f"Error loading from file: {e}")
        else:
            print("File not found.")
